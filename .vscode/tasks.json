{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Jupyter Notebook",
            "command": "cd Python/ && export BROWSER=google-chrome && python3 -m jupyter notebook",
            "group": "build",
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Make & Test",
            "command": "make all -j$(nproc) && make test",
            "options": {
                "cwd": "build"
            },
            "problemMatcher": "$gcc",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "clear": true
            }
        },
        {
            "type": "shell",
            "label": "Make Python",
            "command": "make python -j$(nproc)",
            "options": {
                "cwd": "build"
            },
            "problemMatcher": "$gcc",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "clear": true
            }
        },
    ]
}